# ðŸŽ¨ Dockerfile para Frontend React + Vite
# Optimizado para desarrollo con Hot Reload

# ==========================================
# ðŸ“¦ STAGE 1: Base con Node.js LTS
# ==========================================
FROM node:20-alpine AS base

# Variables de build
ARG NODE_ENV=development
ENV NODE_ENV=${NODE_ENV}

# ConfiguraciÃ³n de Node.js optimizada
ENV NPM_CONFIG_LOGLEVEL=warn
ENV NPM_CONFIG_FUND=false
ENV NPM_CONFIG_AUDIT=false

# Instalar dependencias del sistema necesarias
RUN apk add --no-cache \
    curl \
    git \
    && rm -rf /var/cache/apk/*

# Crear usuario no-root para seguridad (con manejo de conflictos)
RUN (addgroup -g 1001 -S nodejs || true) && \
    (adduser -S nodejs -u 1001 -G nodejs || true) && \
    # Si el usuario ya existe, asegurar que nodejs estÃ© disponible
    if ! id nodejs >/dev/null 2>&1; then \
        adduser -S nodejs -u 1002 -G nodejs || adduser -S nodejs; \
    fi

# ==========================================
# ðŸ“‹ STAGE 2: Dependencias
# ==========================================
FROM base AS dependencies

# Directorio de trabajo
WORKDIR /app

# Copiar archivos de configuraciÃ³n de dependencias
COPY package*.json ./

# Instalar dependencias segÃºn el entorno
RUN if [ "$NODE_ENV" = "production" ]; then \
        npm ci --only=production && npm cache clean --force; \
    else \
        npm install; \
    fi

# ==========================================
# ðŸ“± STAGE 3: Desarrollo (Hot Reload)
# ==========================================
FROM dependencies AS development

# Variables especÃ­ficas de desarrollo
ENV VITE_HMR_PORT=8080
ENV VITE_HOST=0.0.0.0
ENV VITE_PORT=8080
ENV CHOKIDAR_USEPOLLING=true
ENV CHOKIDAR_INTERVAL=1000
ENV WATCHPACK_POLLING=true
ENV FAST_REFRESH=true

# Copiar cÃ³digo fuente
COPY . .

# Cambiar propietario a usuario no-root (CORREGIDO)
RUN chown -R nodejs:nodejs /app
USER nodejs

# Healthcheck para verificar que Vite estÃ© funcionando
HEALTHCHECK --interval=30s --timeout=10s --start-period=60s --retries=3 \
    CMD curl -f http://localhost:8080 || exit 1

# Script de inicio para desarrollo
CMD ["sh", "-c", "npm run dev"]

# ==========================================
# ðŸ—ï¸ STAGE 4: Build de ProducciÃ³n
# ==========================================
FROM dependencies AS builder

# Copiar cÃ³digo fuente
COPY . .

# Build de la aplicaciÃ³n
RUN npm run build

# ==========================================
# ðŸš€ STAGE 5: ProducciÃ³n con NGINX
# ==========================================
FROM nginx:alpine AS production

# Metadata de producciÃ³n
LABEL stage="production"

# Copiar archivos construidos
COPY --from=builder /app/dist /usr/share/nginx/html

# ConfiguraciÃ³n personalizada de NGINX (opcional)
# COPY nginx.conf /etc/nginx/nginx.conf

# Crear usuario no-root para NGINX (con manejo de conflictos)
RUN (addgroup -g 1001 -S nginx || true) && \
    (adduser -S nginx -u 1001 -G nginx || true) && \
    # Si el usuario ya existe, asegurar que nginx estÃ© en el grupo correcto
    if ! id nginx >/dev/null 2>&1; then \
        adduser -S nginx -u 1002 -G nginx || adduser -S nginx; \
    fi

# Cambiar propietario de archivos
RUN chown -R nginx:nginx /usr/share/nginx/html && \
    chown -R nginx:nginx /var/cache/nginx && \
    chown -R nginx:nginx /var/log/nginx && \
    chown -R nginx:nginx /etc/nginx/conf.d

# Cambiar a usuario no-root
USER nginx

# Exponer puerto
EXPOSE 80

# Healthcheck para NGINX
HEALTHCHECK --interval=30s --timeout=3s --start-period=30s --retries=3 \
    CMD curl -f http://localhost:80 || exit 1

# Comando por defecto
CMD ["nginx", "-g", "daemon off;"]

# ==========================================
# ðŸŽ¯ STAGE FINAL: Usar development por defecto
# ==========================================
FROM development AS final